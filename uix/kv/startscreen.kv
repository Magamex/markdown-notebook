#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import NavDrawer uix.navdrawer.NavDrawer
#:import BaseScreen uix.basescreen.BaseScreen
#:import About uix.about.About

<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(5)

            MDToolbar:
                id: action_bar
                background_color: app.theme_cls.primary_color
                title: app.title
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color

            ScreenManager:
                id: manager

                BaseScreen:
                    id: base

                About:
                    id: about

