#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import MarkdownLexer pygments.lexers.markup.MarkdownLexer

#:import NavDrawer uix.nav_drawer.NavDrawer
#:import AboutScreen uix.about_screen.AboutScreen

<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'

            MDToolbar:
                id: action_bar
                background_color: app.theme_cls.primary_color
                title: app.title
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color

            ScreenManager:
                id: manager

                Screen:
                    name: 'notebooks_screen'

                    ScrollView:
                        MDList:
                            id: notebook_list

                    MDFloatingActionButton:
                        icon: 'plus'
                        md_bg_color: app.theme_cls.primary_color
                        x: Window.width - self.width - dp(10)
                        y: dp(10)
                        on_release: app.notebook_selector.open()

                Screen:
                    name: 'note_tree_screen'
                    ScrollView:
                        TreeView:
                            id: note_tree
                            hide_root: True
                            indent_level: 10
                            size_hint_y: None
                            select_node: app._select_note_heading

                Screen:
                    name: 'note_viewer_screen'
                    RstDocument:
                        id: note_viewer
                    MDFloatingActionButton:
                        icon: 'file-document-edit-outline'
                        md_bg_color: app.theme_cls.primary_color
                        x: Window.width - self.width - dp(10)
                        y: dp(10)
                        on_release: app._open_note_editor()

                Screen:
                    name: 'note_editor_screen'
                    BoxLayout:
                        orientation: 'vertical'
                        MDTextField:
                            id: note_title
                            hint_text: 'Heading text'
                        ScrollView:
                            do_scroll_x: False
                            CodeInput:
                                id: note_editor
                                lexer: MarkdownLexer()
                                size_hint_y: None

                AboutScreen:
                    id: about_screen
                    name: 'about_screen'
